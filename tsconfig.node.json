{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@plugins/*": [
        "./plugins/*"
      ],
      "@core/*": [
        "./core/*"
      ]
    }
  },
  "include": ["vite.config.ts"]
}
